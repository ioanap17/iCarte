        </activity>
        <activity android:name=".activities.Catalog" />
        <activity android:name=".activities.ProductDetailsActivity" />
        <activity android:name=".activities.ShoppingCartActivity" />
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.RegisterActivity" />
        <activity android:name=".activities.CategoryActivity" />
        <activity android:name=".activities.PayPalCheckOutActivity" />
        <activity android:name=".activities.StripePaymentActivity"></activity>
    </application>

</manifest>